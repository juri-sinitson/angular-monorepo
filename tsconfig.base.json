{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@angular-monorepo/generators": ["libs/non-prod/generators/src/index.ts"],
      "@angular-monorepo/persons-management-api-persons": [
        "libs/persons-management/api-persons/src/index.ts"
      ],
      "@angular-monorepo/persons-management-api-persons-e2e": [
        "libs/persons-management/api-persons/src/index-e2e.ts"
      ],
      "@angular-monorepo/persons-management-feature-birthdays": [
        "libs/persons-management/feature-birthdays/src/index.ts"
      ],
      "@angular-monorepo/persons-management/domain": [
        "libs/persons-management/domain/src/index.ts"
      ],
      "@angular-monorepo/shared/ui-chart": [
        "libs/shared/ui-chart/src/index.ts"
      ],
      "@angular-monorepo/shared/ui-common": [
        "libs/shared/ui-common/src/index.ts"
      ],
      "@angular-monorepo/shared/ui-menu": ["libs/shared/ui-menu/src/index.ts"],
      "@angular-monorepo/shared/util-common": [
        "libs/shared/util-common/src/index.ts"
      ],
      "@angular-monorepo/shared/util-common-non-prod": [
        "libs/shared/util-common/src/index-non-prod.ts"
      ],
      "@angular-monorepo/shared/util-common-non-prod-e2e": [
        "libs/shared/util-common/src/index-non-prod-e2e.ts"
      ]
    }
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true
  },
  "exclude": ["node_modules", "tmp"]
}
