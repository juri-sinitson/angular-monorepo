{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@angular-monorepo/shared-business//examples": [
        "libs/shared-business/examples/src/index.ts"
      ],
      "@angular-monorepo/shared-business/feature-examples": [
        "libs/shared-business/feature-examples/src/index.ts"
      ],
      "@angular-monorepo/shared/ui-chart": [
        "libs/shared/ui-chart/src/index.ts"
      ],
      "@angular-monorepo/shared/ui-common": [
        "libs/shared/ui-common/src/index.ts"
      ],
      "@angular-monorepo/shared/ui-menu": ["libs/shared/ui-menu/src/index.ts"],
      "@angular-monorepo/shared/util-common": [
        "libs/shared/util-common/src/index.ts"
      ]
    }
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true
  },
  "exclude": ["node_modules", "tmp"]
}
